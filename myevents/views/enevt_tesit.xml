<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="event_inherit_view_form" model="ir.ui.view">
    <field name="name">event.event.form</field>
    <field name="model">event.event</field>
    <field name="inherit_id" ref="event.view_event_form"/>
    <field name="arch" type="xml">
        
                
                <xpath expr="//field[@name='address_id']" position="after">
                    <field name="theme_event"  />
                    
                  </xpath>
                  <xpath expr="//field[@name='organizer_id']" position="replace">
                    <field name="organizer_id" invisible='1'/>
                    <field name="organizer_ids" />
                  </xpath>
            
            <xpath expr="//page[@name='event_communication']" position="after">
                <page name="material" string="Material">
                    <group>
                        
                        <field name="event_material_ids" /> 
                    </group>
                    
                </page>
                <page  string="Organizers">
                    <group>
                        <field name="organizer_ids" />
                    </group>
                    
                </page>
           </xpath>
    </field>
</record>

    <record  model="ir.actions.act_window" id="event_list_action">
        <field name="name">Eventss</field>
        <field name="res_model">event.event</field>
        <field name = "view_mode">tree,kanban,form,calendar,graph</field>
    </record>
<menuitem id="main_my_events_menu" name="My Events" />

<menuitem id="my_events_menu" name="Reporing"  parent="main_my_events_menu"/>

<menuitem id="courses_menu" name="Events"  parent="my_events_menu" action = "event_list_action"/>

</odoo>
