<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="orgainzer_view_form" model="ir.ui.view">
        <field name="name">orgainzer.form</field>
        <field name="model">organizer.organizers</field>
        <field name="arch" type="xml">
            <form >
                <sheet >
                    <div style="margin-top: 30px; background-color: #D5D5E7;padding: 10px;border-radius: 5px;">
                        <h2>Organizer</h2>
                        <field name="companys_types"  class="oe_edit_only" widget="radio"   options="{'horizontal': true}" />
                            <div class="container">
                                <div class="oe_title">
                                    <field name="field_name_ids"  placeholder="Company" attrs="{'invisible': [('companys_types','=', 'company')]}"/>
                                </div>
                                <group >
                                        <group>
                                           
                                            <field name="last_name" placeholder="Last Name" />
                                            <field name="first_name" placeholder="First Name" />
                                            <field name="phone" placeholder="00967775435987"/>
                                        </group>
                                        <group>
                                            <field name="mail" placeholder="example@mail.com"/>
                                            <field name="aselection" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                                            <field name="event_id" class="oe_inline" />
                                        </group>
                                </group>
                            </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="orgainzer_view_tree" model="ir.ui.view">
        <field name="name">orgainzer.tree</field>
        <field name="model">organizer.organizers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="phone" />
                <field name="mail" />
            </tree>
        </field>
    </record>
